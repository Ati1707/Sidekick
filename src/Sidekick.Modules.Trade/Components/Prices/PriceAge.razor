@using Sidekick.Modules.Trade.Localization

<TextCaption Class="text-center">@Text</TextCaption>

@inject IStringLocalizer<TradeResources> Resources

@code {

    [Parameter] public DateTimeOffset Date { get; set; }

    private string Text
    {
        get
        {
            var span = DateTimeOffset.Now - Date;

            if (span.Days > 1) return Resources["{0} days", span.Days];
            if (span.Days == 1) return Resources["{0} day", span.Days];
            if (span.Hours > 1) return Resources["{0} hours", span.Hours];
            if (span.Hours == 1) return Resources["{0} hour", span.Hours];
            if (span.Minutes > 1) return Resources["{0} minutes", span.Minutes];
            if (span.Minutes == 1) return Resources["{0} minute", span.Minutes];
            if (span.Seconds > 10) return Resources["{0} seconds", span.Seconds];

            return Resources["now"];
        }
    }
}
