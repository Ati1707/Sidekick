@using MudBlazor

<MudTooltip Placement="Placement.Right">
    <ChildContent>
        @if (ChildContent == null)
        {
            <MudIcon Icon="@Icons.Material.Filled.Help" Color="Color.Info" Size="Size.Small" Class="ml-2" />
        }
        else
        {
            @ChildContent
        }
    </ChildContent>

    <TooltipContent>
        <MudText Typo="Typo.body1" Style="max-width: 15rem;">@Text</MudText>
    </TooltipContent>
</MudTooltip>

@code {
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
