
<div class="application-nav-bar">
    <MudAppBar Fixed="false" Elevation="0">
        @LeftContent
        <div class="icon"><img src="/images/orbs/ExaltedOrb.png" /></div>
        <MudText Typo="Typo.h6">
            <span id="sidekick-appbar-title">@Wrapper.View.Title</span>
        </MudText>
        <MudSpacer />

        @if (Wrapper.View != null)
        {
            if (Wrapper.View.ViewType == SidekickViewType.Standard)
            {
                <MudIconButton Color="Color.Inherit"
                       Variant="Variant.Text"
                       Icon="@Icons.Material.Filled.Minimize"
                       @onclick="() => ViewLocator.Minimize(Wrapper.View)" />

                <MudIconButton Color="Color.Inherit"
                       Variant="Variant.Text"
                       Icon="@Icons.Material.Filled.CropSquare"
                       @onclick="() => ViewLocator.Maximize(Wrapper.View)" />
            }

            <MudIconButton Class="close-button" Color="Color.Inherit" Variant="Variant.Text" Icon="@Icons.Material.Filled.Close" @onclick="Wrapper.View.Close" Edge="Edge.End" />
        }
    </MudAppBar>
</div>

@code {
    [Inject]
    private IViewLocator ViewLocator { get; set; }

    [CascadingParameter] public SidekickWrapper Wrapper { get; set; }

    [Parameter] public RenderFragment LeftContent { get; set; }
}
