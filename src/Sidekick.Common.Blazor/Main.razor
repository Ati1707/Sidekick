@using Microsoft.Extensions.Options;
@using Sidekick.Common.Ui.Views
@inject IOptions<SidekickConfiguration> Configuration;
@inject IViewLocator ViewLocator

<AppWrapper>
    <Router AppAssembly="@typeof(Main).Assembly" AdditionalAssemblies="Configuration.Value.Modules">
        <Found Context="routeData">
            <RouteView RouteData="@routeData"/>
        </Found>
        <NotFound>
            <LayoutView>
                <LayoutSimple>
                    <TopContent>
                        <AppLogo/>
                    </TopContent>

                    <ChildContent>
                        <AlertError>
                            <TextBase Class="text-center">Page not found.</TextBase>
                        </AlertError>
                    </ChildContent>
                </LayoutSimple>
            </LayoutView>
        </NotFound>
    </Router>
</AppWrapper>
