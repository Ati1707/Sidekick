
<div class="d-flex align-center @Class">
    <RewardThumbs Value="Model.Value" />
    <MudText Typo="Typo.body2">
        @Model.Name
    </MudText>
    @if (Model.BehindFracturedWall)
    {
        <MudTooltip Text="@Resources.FracturedWall" Placement="Placement.Top">
            <img src="/images/delve/FracturedWall.png" />
        </MudTooltip>
    }
    @if (Model.InFossilRoom)
    {
        <MudTooltip Text="@Resources.FossilRoom" Placement="Placement.Top">
            <img src="/images/delve/FossilRoom.png" />
        </MudTooltip>
    }
</div>

@code {
    [Inject] private DelveResources Resources { get; set; }

    [Parameter] public FossilModel Model { get; set; }
    [Parameter] public string Class { get; set; }
}
