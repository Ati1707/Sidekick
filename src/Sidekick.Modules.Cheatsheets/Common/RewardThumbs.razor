
<div class="d-flex align-center justify-center">
    @if (Value == RewardValue.High)
    {
        <MudTooltip Text="@Resources.Value_High" Placement="Placement.Top">
            <div class="high-double-icon">
                <MudIcon Icon="@Icons.Material.Filled.ThumbUp"
                         Class="green-text"></MudIcon>
                <MudIcon Icon="@Icons.Material.Filled.ThumbUp"
                         Class="green-text text-darken-4"></MudIcon>
            </div>
        </MudTooltip>
    }
    else if (Value == RewardValue.Medium)
    {
        <MudTooltip Text="@Resources.Value_Medium" Placement="Placement.Top">
            <MudIcon Icon="@Icons.Material.Filled.ThumbUp"
                     Class="teal-text"></MudIcon>
        </MudTooltip>
    }
    else if (Value == RewardValue.Low)
    {
        <MudTooltip Text="@Resources.Value_Low" Placement="Placement.Top">
            <MudIcon Icon="@Icons.Material.Filled.ThumbDown"
                     Class="yellow-text"></MudIcon>
        </MudTooltip>
    }
    else
    {
        <MudTooltip Text="@Resources.Value_None" Placement="Placement.Top">
            <div class="no-double-icon">
                <MudIcon Icon="@Icons.Material.Filled.ThumbDown"
                         Class="red-text text-darken-4"></MudIcon>
                <MudIcon Icon="@Icons.Material.Filled.ThumbDown"
                         Class="red-text"></MudIcon>
            </div>
        </MudTooltip>
    }
</div>

@code {
    [Inject] private CheatsheetResources Resources { get; set; }

    [Parameter] public RewardValue Value { get; set; }
}
