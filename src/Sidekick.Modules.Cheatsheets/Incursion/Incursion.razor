@page "/cheatsheets/incursion"
@layout CheatsheetLayout

<UltimatumAlert />
<MudGrid Spacing="1">
    @foreach (var room in Rooms)
    {
        <MudItem xs="12" sm="6" md="4" lg="3">
            <Room Model="room" />
        </MudItem>
    }
</MudGrid>

