@page "/cheatsheets/blight"
@layout CheatsheetLayout

<UltimatumAlert />
<MudGrid Spacing="1">
    @foreach (var oil in Oils)
    {
        <MudItem xs="12" sm="6" md="4" lg="3">
            <Oil Model="oil" />
        </MudItem>
    }
</MudGrid>

@code {
    [Inject] private CheatsheetResources CheatsheetResources { get; set; }
    [Inject] private BlightResources Resources { get; set; }
    [Inject] private IViewInstance ViewInstance { get; set; }

    private List<OilModel> Oils { get; set; }

    protected override Task OnInitializedAsync()
    {
        ViewInstance.SetTitle(CheatsheetResources.Blight);

        Oils = new List<OilModel>
{
            new OilModel(Resources.GoldenOil, Resources.GoldenOilEffect, RewardValue.High, "Golden_Oil.png"),
            new OilModel(Resources.SilverOil, Resources.SilverOilEffect, RewardValue.High, "Silver_Oil.png"),
            new OilModel(Resources.OpalescentOil, Resources.OpalescentOilEffect, RewardValue.Medium, "Opalescent_Oil.png"),
            new OilModel(Resources.BlackOil, Resources.BlackOilEffect, RewardValue.Medium, "Black_Oil.png"),
            new OilModel(Resources.CrimsonOil, Resources.CrimsonOilEffect, RewardValue.Medium, "Crimson_Oil.png"),
            new OilModel(Resources.VioletOil, Resources.VioletOilEffect, RewardValue.Low, "Violet_Oil.png"),
            new OilModel(Resources.AzureOil, Resources.AzureOilEffect, RewardValue.NoValue, "Azure_Oil.png"),
            new OilModel(Resources.TealOil, Resources.TealOilEffect, RewardValue.Low, "Teal_Oil.png"),
            new OilModel(Resources.VerdantOil, Resources.VerdantOilEffect, RewardValue.NoValue, "Verdant_Oil.png"),
            new OilModel(Resources.AmberOil, Resources.AmberOilEffect, RewardValue.NoValue, "Amber_Oil.png"),
            new OilModel(Resources.SepiaOil, Resources.SepiaOilEffect, RewardValue.NoValue, "Sepia_Oil.png"),
            new OilModel(Resources.ClearOil, Resources.ClearOilEffect, RewardValue.NoValue, "Clear_Oil.png"),
        };

        return base.OnInitializedAsync();
    }
}
