@page "/settings/map"
@layout SettingsLayout
@inherits SidekickView

<AppContainer>
    <Heading2 Class="mb-3">@Resources["Keybindings"]</Heading2>
    <KeyOpenMapCheckEditor/>
    <KeyCloseEditor/>

    <LayoutDivider/>

    <Heading2 Class="mb-3">@Resources["Dangerous Modifiers"]</Heading2>
    <MapCheckDangerousRegexEditor/>

    <LayoutDivider/>

    <Heading2 Class="mb-3">@Resources["Other Settings"]</Heading2>
    <MapCheckCloseWithMouseEditor/>
    <EscapeClosesOverlaysEditor/>
</AppContainer>

@inject IStringLocalizer<SettingsResources> Resources

@code {

    public override string Title => Resources["Settings"];

}
