@page "/settings/price"
@layout SettingsLayout
@using Sidekick.Modules.Settings.Localization
@using Sidekick.Modules.Settings.Components
@using Sidekick.Modules.Settings.General
@inherits Sidekick.Common.Ui.Views.SidekickView

<AppTitle Title="@Resources["Settings"]"/>
<AppContainer>
    <Heading2 Class="mb-3">@Resources["Keybindings"]</Heading2>
    <KeyOpenPriceCheckEditor/>
    <KeyCloseEditor/>

    <LayoutDivider/>

    <Heading2 Class="mb-3">@Resources["Item Trade Settings"]</Heading2>
    <PriceCheckItemCurrencyEditor/>
    <PriceCheckPredictionEnabledEditor/>

    <LayoutDivider/>

    <Heading2 Class="mb-3">@Resources["Bulk Trade Settings"]</Heading2>
    <PriceCheckCurrencyModeEditor/>
    <PriceCheckBulkCurrencyEditor/>
    <PriceCheckBulkMinimumStockEditor/>

    <LayoutDivider/>

    <Heading2 Class="mb-3">@Resources["Other Settings"]</Heading2>
    <PriceCheckCloseWithMouseEditor/>
    <EscapeClosesOverlaysEditor/>
</AppContainer>

@inject IStringLocalizer<SettingsResources> Resources
