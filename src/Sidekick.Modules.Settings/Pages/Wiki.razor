@page "/settings/wiki"
@layout SettingsLayout

<MudCard>
    <MudCardHeader Class="pb-0">
        <CardHeaderContent>
            <MudText Typo="Typo.h3">@Resources.Group_Keybinds</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="pt-0">
        <KeybindEditor Label="@Resources.Wiki_Key_Open"
                       @bind-Value="ViewModel.Wiki_Key_Open" />
    </MudCardContent>
</MudCard>
<MudCard Class="mt-6">
    <MudCardHeader Class="pb-0">
        <CardHeaderContent>
            <MudText Typo="Typo.h3">@Resources.Group_Other</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="pt-0">
        <MudSelect T="WikiSetting"
                   Label="@Resources.Wiki_Preferred"
                   Variant="Variant.Filled"
                   @bind-Value="ViewModel.Wiki_Preferred">
            @foreach (var option in ViewModel.WikiOptions)
            {
                <MudSelectItem Value="@option.Key">@option.Value</MudSelectItem>
            }
        </MudSelect>
    </MudCardContent>
</MudCard>

@code {
    [Inject] private SettingsResources Resources { get; set; }
    [Inject] private SettingsModel ViewModel { get; set; }
}
