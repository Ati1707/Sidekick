@using Sidekick.Common.Game.Items

<TextBase Class="@($"{Class} {ColorClass} leading-none py-0.5 font-caps")">@ChildContent</TextBase>

@code {

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; } = "text-center";

    [Parameter]
    public ModifierCategory? Category { get; set; }

    private string ColorClass => Category switch
    {
        ModifierCategory.Scourge => "text-[#FF6E25]",
        ModifierCategory.Fractured => "text-[#A29162]",
        ModifierCategory.Enchant => "text-[#B4B4FF]",
        ModifierCategory.Rune => "text-[#B4B4FF]",
        ModifierCategory.Crafted => "text-[#B4B4FF]",
        ModifierCategory.Crucible => "text-[#FF7339]",
        ModifierCategory.Corrupted => "text-[#D20000]",
        ModifierCategory.Unidentified => "text-[#D20000]",
        _ => "text-[#8888FF]",
    };

}
