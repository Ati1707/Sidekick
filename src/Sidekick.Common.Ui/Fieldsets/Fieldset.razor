<fieldset class="border border-solid dark:border-stone-800 p-3 mb-3">
    @if (Legend != null)
    {
        <legend class="font-medium leading-none tracking-tight text-2xl">@Legend</legend>
    }
    @ChildContent
</fieldset>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Legend { get; set; }
}
