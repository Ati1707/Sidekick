<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.6" />
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sidekick.Common\Sidekick.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Dialogs\ConfirmationDialog.razor" />
    <AdditionalFiles Include="Layouts\StandardLayout.razor" />
    <AdditionalFiles Include="Poe\Items\BossFrame.razor" />
    <AdditionalFiles Include="Poe\Items\DivinationCard.razor" />
    <AdditionalFiles Include="Poe\Items\ItemHeader.razor" />
    <AdditionalFiles Include="Poe\Items\ItemInfluencesComponent.razor" />
    <AdditionalFiles Include="Poe\Items\ItemModifierCategoryChip.razor" />
    <AdditionalFiles Include="Poe\Items\ItemModifierText.razor" />
    <AdditionalFiles Include="Poe\Items\ItemPropertyText.razor" />
    <AdditionalFiles Include="Poe\Items\ItemSeparator.razor" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="npm install &amp;&amp; npm run build"/>
  </Target>

</Project>
