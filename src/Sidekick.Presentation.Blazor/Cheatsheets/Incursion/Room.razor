
<MudPaper Class="pa-2">
    <RoomTier Model="Model.Level3" TierLabel="3" TierTooltip="@Resources.Level3" TextSize="Typo.h4" Class="mb-1" />
    <RoomTier Model="Model.Level2" TierLabel="2" TierTooltip="@Resources.Level2" TextSize="Typo.h5" Class="mb-1" />
    <RoomTier Model="Model.Level1" TierLabel="1" TierTooltip="@Resources.Level1" TextSize="Typo.h6" />
    @if (!string.IsNullOrEmpty(Model.Modifiers))
    {
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.body2">
            @((MarkupString)Model.Modifiers)
        </MudText>
    }
    @if (!string.IsNullOrEmpty(Model.Contains))
    {
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.body2">
            @((MarkupString)Model.Contains)
        </MudText>
    }
    @if (!string.IsNullOrEmpty(Model.Tooltip))
    {
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.body2">
            @((MarkupString)Model.Tooltip)
        </MudText>
    }
</MudPaper>

@code {
    [Inject] private IncursionResources Resources { get; set; }

    [Parameter] public IncursionRoom Model { get; set; }
}
