
<div class="@Class">
    @if (Value == Domain.Cheatsheets.RewardValue.High)
    {
        <MudTooltip Text="@Resources.Value_High">
            <MudProgressLinear Min="0" Max="4" Value="4" Color="Color.Success"></MudProgressLinear>
        </MudTooltip>
    }
    else if (Value == Domain.Cheatsheets.RewardValue.Medium)
    {
        <MudTooltip Text="@Resources.Value_Medium">
            <MudProgressLinear Min="0" Max="4" Value="3" Color="Color.Primary"></MudProgressLinear>
        </MudTooltip>
    }
    else if (Value == Domain.Cheatsheets.RewardValue.Low)
    {
        <MudTooltip Text="@Resources.Value_Low">
            <MudProgressLinear Min="0" Max="4" Value="2" Color="Color.Warning"></MudProgressLinear>
        </MudTooltip>
    }
    else
    {
        <MudTooltip Text="@Resources.Value_None">
            <MudProgressLinear Min="0" Max="4" Value="1" Color="Color.Error"></MudProgressLinear>
        </MudTooltip>
    }
</div>

@code {
    [Inject] private CheatsheetResources Resources { get; set; }

    [Parameter] public Sidekick.Domain.Cheatsheets.RewardValue Value { get; set; }
    [Parameter] public string Class { get; set; }
}
