@inherits LayoutComponentBase
@layout MenuLayout

<MudDrawer @bind-Open="@Layout.MenuOpened"
           Anchor="Anchor.Left"
           Variant="@DrawerVariant.Responsive"
           Breakpoint="Breakpoint.Lg"
           ClipMode="DrawerClipMode.Docked">
    <MudDrawerHeader></MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Match="NavLinkMatch.All" Href="/development/typography">Typography</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/development/tests">Tests</MudNavLink>
    </MudNavMenu>
</MudDrawer>

<MudMainContent>
    <MudContainer Class="py-6">
        @Body
    </MudContainer>
</MudMainContent>

@code {
    [CascadingParameter] public MenuLayout Layout { get; set; }
}
