
<MudPaper Class="mb-3">
    <MudButton Variant="Variant.Text" Class="d-flex flex-row align-center pa-3" FullWidth="true" Link="@Link">
        <MudIcon Icon="@Icon" Color="Color" Size="Size.Large" Class="mr-3" />
        <MudText Typo="Typo.h5">
            @Label
        </MudText>
    </MudButton>
</MudPaper>

@code {
    [Parameter] public string Label { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public Color Color { get; set; }
    [Parameter] public string Link { get; set; }
}
